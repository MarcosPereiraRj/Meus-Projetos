package primeirojava;

import java.util.Scanner;

public class NumeroPar {
	/**
	 * Criar um programa que receba um numero e verifique 
	 * se ele está entre 0 e 10 é par;
	 */
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Digite um numero:");
		int numero = scanner.nextInt(); 
		if (numero >= 0 && numero <= 10) {
			if(numero % 2 == 0) {
				System.out.println( " O numero "  +   numero   + 
						" está entre 0 e 10 \n é um numero par.");
	} 	else {
		System.out.println("O numero "  +  numero  + 
				 " não esta entre um numero par.");
	} 
	}	else {
		System.out.println(" O numero "  +  numero  +  " não está entre 0 e 10 ");
		scanner.close();
	}
	}
	}